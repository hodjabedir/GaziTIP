<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textColor="#000"
          android:textSize="16sp"
          android:layout_marginTop="24dp"
          android:layout_marginLeft="10dp"
          android:text="Dönem"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="10dp"
          android:orientation="horizontal">
          <Button
              android:id="@+id/donem1"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="1"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/donem2"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="2"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/donem3"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="3"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/donem4"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="4"
              android:background="@drawable/button_background"/>

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="10dp"
          android:orientation="horizontal">
          <Button
              android:id="@+id/donem5"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="5"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/donem6"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="6"
              android:background="@drawable/button_background"/>


      </LinearLayout>




  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textColor="#000"
          android:textSize="16sp"
          android:layout_marginTop="16dp"
          android:layout_marginLeft="10dp"
          android:text="Komite"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="10dp"
          android:orientation="horizontal">
          <Button
              android:id="@+id/komite1"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="1"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/komite2"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="2"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/komite3"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="3"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/komite4"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="4"
              android:background="@drawable/button_background"/>

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="10dp"
          android:orientation="horizontal">
          <Button
              android:id="@+id/komite5"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="5"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/komite6"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="6"
              android:background="@drawable/button_background"/>
          <Button
              android:id="@+id/komite7"
              android:layout_marginLeft="10dp"
              android:layout_width="55dp"
              android:layout_height="50dp"
              android:textSize="12sp"
              android:text="7"
              android:background="@drawable/button_background"/>

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textColor="#000"
              android:textSize="16sp"
              android:layout_marginTop="16dp"
              android:layout_marginLeft="10dp"
              android:text="Yıl"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:layout_marginLeft="10dp"
              android:orientation="horizontal">
              <Button
                  android:id="@+id/yil2016"
                  android:layout_marginLeft="10dp"
                  android:layout_width="55dp"
                  android:layout_height="50dp"
                  android:textSize="12sp"
                  android:text="2016"
                  android:background="@drawable/button_background"/>
              <Button
                  android:id="@+id/yil2017"
                  android:layout_marginLeft="10dp"
                  android:layout_width="55dp"
                  android:layout_height="50dp"
                  android:textSize="12sp"
                  android:text="2017"
                  android:background="@drawable/button_background"/>
              <Button
                  android:id="@+id/yil2018"
                  android:layout_marginLeft="10dp"
                  android:layout_width="55dp"
                  android:layout_height="50dp"
                  android:textSize="12sp"
                  android:text="2018"
                  android:background="@drawable/button_background"/>
              <Button
                  android:id="@+id/yil2019"
                  android:layout_marginLeft="10dp"
                  android:layout_width="55dp"
                  android:layout_height="50dp"
                  android:textSize="12sp"
                  android:text="2019"
                  android:background="@drawable/button_background"/>

          </LinearLayout>
          <Button
              android:id="@+id/sorularagit_btn"
              android:layout_width="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_gravity="center"
              android:background="@drawable/button_background"
              android:text="Sorulara git"
              android:layout_height="45dp"/>



  </LinearLayout>


</LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_main"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7739380766735309/8029008616">
    </com.google.android.gms.ads.AdView>



</LinearLayout>